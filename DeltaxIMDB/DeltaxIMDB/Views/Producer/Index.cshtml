        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producer_DOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producer_Bio)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Producer_Id }) |
